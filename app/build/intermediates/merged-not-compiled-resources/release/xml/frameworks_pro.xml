    </PreferenceCategory>

    <!-- CUSTOM NAVBAR -->
    <PreferenceCategory android:layout="@layout/preferences_category" android:title="Custom Navbar">
        <com.boostermbkking.ks8mods.v2.prefs.MySwitchPreference
            android:title="Custom Navbar High Switch" android:key="navbar_height_switch" android:defaultValue="false" android:summaryOn="enabled" android:summaryOff="disabled" />
        <com.boostermbkking.ks8mods.v2.prefs.MySeekBarPreference
            android:title="Custom Navbar High" android:key="navbar_height" android:dependency="navbar_height_switch" android:defaultValue="172" app:maxValue="200" app:minValue="65" app:unitsValue="dp" />
        <com.boostermbkking.ks8mods.v2.prefs.MySwitchPreference
            android:title="Custom Navbar Icon Color Switch" android:key="unlock_navbar_colors" android:defaultValue="false" android:summaryOn="Allow colors to be changed" android:summaryOff="Colors are locked to stock" app:isSilent="false" app:packageNameToKill="com.android.systemui" />
        <com.boostermbkking.ks8mods.v2.prefs.ColorPickerPreference
            android:title="Custom Navbar Icon Color" android:key="navbar_icon_color" android:dependency="unlock_navbar_colors" android:defaultValue="\#fffafafa" app:isSilent="false" app:packageNameToKill="com.android.systemui" />
    </PreferenceCategory>
